<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/group_record_speed"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_above="@+id/btn_record"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/group_record_speed_background"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtn_record_speed_extra_slow"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/rbtn_record_speed_background"
            android:button="@null"
            android:gravity="center"
            android:text="极慢"
            android:textColor="@drawable/rbtn_record_speed_text" />

        <RadioButton
            android:id="@+id/rbtn_record_speed_slow"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/rbtn_record_speed_background"
            android:button="@null"
            android:gravity="center"
            android:text="慢"
            android:textColor="@drawable/rbtn_record_speed_text" />

        <RadioButton
            android:id="@+id/rbtn_record_speed_normal"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/rbtn_record_speed_background"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="标准"
            android:textColor="@drawable/rbtn_record_speed_text" />

        <RadioButton
            android:id="@+id/rbtn_record_speed_fast"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/rbtn_record_speed_background"
            android:button="@null"
            android:gravity="center"
            android:text="快"
            android:textColor="@drawable/rbtn_record_speed_text" />

        <RadioButton
            android:id="@+id/rbtn_record_speed_extra_fast"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/rbtn_record_speed_background"
            android:button="@null"
            android:gravity="center"
            android:text="极快"
            android:textColor="@drawable/rbtn_record_speed_text" />
    </RadioGroup>

    <SurfaceView
        android:id="@+id/surfaceViewOverlap"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <SurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.ray.opengl.MyRecordButton
        android:id="@+id/btn_record"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_record_background"
        android:gravity="center"
        android:text="按住拍" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chk_bigeye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大眼" />

            <!-- TODO NDK OpenGL 53节课 下面是新增的 -->
            <CheckBox
                android:id="@+id/chk_stick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贴纸" />

            <CheckBox
                android:id="@+id/chk_beauty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美颜" />

            <CheckBox
                android:id="@+id/chk_demo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关键点" />

            <CheckBox
                android:id="@+id/chk_thinface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="瘦脸" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chk_brighteye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亮眼" />

            <CheckBox
                android:id="@+id/chk_lipstick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="口红" />
            <CheckBox
                android:id="@+id/chk_beauty02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美颜02" />

            <CheckBox
                android:id="@+id/chk_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="猫" />

            <CheckBox
                android:id="@+id/chk_helmet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头盔" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>