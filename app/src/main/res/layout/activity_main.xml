<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ray.opengl.MainActivity">

    <RadioGroup
        android:id="@+id/group_record_speed"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_above="@+id/btn_record"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/group_record_speed_background"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtn_record_speed_extra_slow"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/rbtn_record_speed_background"
            android:button="@null"
            android:gravity="center"
            android:text="极慢"
            android:textColor="@drawable/rbtn_record_speed_text" />

        <RadioButton
            android:id="@+id/rbtn_record_speed_slow"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/rbtn_record_speed_background"
            android:button="@null"
            android:gravity="center"
            android:text="慢"
            android:textColor="@drawable/rbtn_record_speed_text" />

        <RadioButton
            android:id="@+id/rbtn_record_speed_normal"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/rbtn_record_speed_background"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="标准"
            android:textColor="@drawable/rbtn_record_speed_text" />

        <RadioButton
            android:id="@+id/rbtn_record_speed_fast"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/rbtn_record_speed_background"
            android:button="@null"
            android:gravity="center"
            android:text="快"
            android:textColor="@drawable/rbtn_record_speed_text" />

        <RadioButton
            android:id="@+id/rbtn_record_speed_extra_fast"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/rbtn_record_speed_background"
            android:button="@null"
            android:gravity="center"
            android:text="极快"
            android:textColor="@drawable/rbtn_record_speed_text" />
    </RadioGroup>



<!--    <com.ray.opengl.FixedAspectRatioRelativeLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:visibility="gone">-->
        <com.ray.opengl.MyGLSurfaceView
            android:id="@+id/glSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <SurfaceView
        android:id="@+id/surfaceViewOverlap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

<!--    </com.ray.opengl.FixedAspectRatioRelativeLayout>-->

<!--    <com.ray.opengl.MyTextureView-->
<!--        android:id="@+id/textureView"-->
