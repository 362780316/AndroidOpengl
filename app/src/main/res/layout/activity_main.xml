<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        android:visibility="gone"/>-->

    <com.ray.opengl.MyRecordButton
        android:id="@+id/btn_record"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_record_background"
        android:gravity="center"
        android:text="按住拍" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chk_bigeye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大眼" />

            <!-- TODO -->
            <CheckBox
                android:id="@+id/chk_stick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2D耳朵"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/chk_beauty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美颜(较差)"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/chk_demo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关键点"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/chk_thinface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="瘦脸" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chk_brighteye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亮眼" />

            <CheckBox
                android:id="@+id/chk_lipstick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红唇" />
            <CheckBox
                android:id="@+id/chk_beauty02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美颜" />

            <CheckBox
                android:id="@+id/chk_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贴纸1" />

            <CheckBox
                android:id="@+id/chk_helmet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3D头盔"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>